<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bbbar.MainActivity" >
    <ImageView 
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#000000"
        
        />
    <TextView
        android:layout_below="@+id/image"
        android:id="@+id/sdcardsizetip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sdcardsize"
        android:background="#000000"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />
        <TextView
        android:id="@+id/sdcardsize"
        android:layout_below="@+id/image"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/sdcardsizetip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sdcardsize"
        android:textSize="14sp"
        android:textColor="#000000" />
        
    <TextView
        
        android:layout_below="@+id/sdcardsizetip"
        android:id="@+id/sdcardsizelefttip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sdcardsizeleft"
        android:background="#000000"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />
        <TextView
            android:layout_below="@+id/sdcardsize"
        android:id="@+id/sdcardsizeleft"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/sdcardsizelefttip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sdcardsizeleft"
        android:textSize="14sp"
        android:textColor="#000000" />
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/sdcardsizelefttip"
            android:id="@+id/pathlayout"
            >
     
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="内置sd路劲："/>
                <TextView 
                    android:id="@+id/insdpath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="内置sd路劲"/>
            </LinearLayout>
        </LinearLayout>"

</RelativeLayout>
